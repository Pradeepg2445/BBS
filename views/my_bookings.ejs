<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Bookings - Bus Booking System</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/base-css/left-navebar.css" />
  <link rel="stylesheet" href="/jquery-confirm/dist/jquery-confirm.min.css" />

  <link rel="stylesheet" href="/base-css/base.css" />

  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <style>
    body {
      background-color: whitesmoke;
    }

    .bookingCard {
      border: 1px solid #ffffff;
      padding: 15px;
      border-radius: 10px;
      width: 90%;
      min-height: fit-content;
      max-height: fit-content;
      box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px, rgba(0, 0, 0, 0.23) 0px 3px 6px;
    }
  </style>
</head>

<body>
  <div id="loading">
    <img id="loading-image" src="/images/loader.gif" alt="Loading..." />
  </div>
  <div class="container-fluid min-vh-100 d-flex flex-column">
    <div class="row flex-grow-1">
      <div class="col-md-2" style="padding:0px;">
        <div class="left-navebar">

        </div>
      </div>
      <div class="col-md-10 ">
        <h3>My Bookings </h3>
        <hr>
        <center>
          <div style="width: 80%;">
            <div class="bookingCard" id="bookingCard_1">
              <div class="row">
                <center>
                  <h4>Chennai to kochi</h4>
                </center>
              </div>
              <div class="row" style="height: 80%;">
                <div class="col-md-6" style="text-align: left;">
                  <table>
                    <tr>
                      <td>Ticket</td>
                      <td>&ensp;:&ensp;</td>
                      <td>#3s456b7s898765d432</td>
                    </tr>
                    <tr>
                      <td>Time</td>
                      <td>&ensp;:&ensp;</td>
                      <td>12:1:2022 11/11/23</td>
                    </tr>
                    <tr>
                      <td>Route</td>
                      <td>&ensp;:&ensp;</td>
                      <td>chennai->Tiruppur->Coimbatore->Kochi</td>
                    </tr>
                    <tr>
                      <td>Seats</td>
                      <td>&ensp;:&ensp;</td>
                      <td>5</td>
                    </tr>
                    <tr>
                      <td colspan="3" style="text-align: center;"><button class="btn btn-primary btn-sm printBtn"
                          onclick="printDiv('bookingCard_1')">Print The Ticket</button></td>
                    </tr>


                  </table>
                </div>
                <div class="col-md-6" style="text-align: left;">
                  <table>
                    <tr>
                      <td>Bus Id</td>
                      <td>&ensp;:&ensp;</td>
                      <td>765d2</td>
                    </tr>
                    <tr>
                      <td>About</td>
                      <td>&ensp;:&ensp;</td>
                      <td style="word-break: break-all;">
                        dfgmh,.mnbvcvbnm,jmhnbvcvbnm,.j,mnbvcvbnm,j,hmgnfbdvscxsdfgjhkjhjgfd</td>
                    </tr>
                    <tr>
                      <td>Price</td>
                      <td>&ensp;:&ensp;</td>
                      <td>345</td>
                    </tr>
                    <tr>
                      <td colspan="3" style="text-align: center;"><button
                          class="btn btn-warning btn-sm cancelBtn">Cancel My Booking</button></td>
                    </tr>

                  </table>
                </div>
              </div>
            </div>


          </div>
      </div>
    </div>
  </div>

  <script language="javascript" src="/bootstrap/js/bootstrap.min.js"></script>
  <script language="javascript" src="/base-js/base.js"> </script>
  <script type="text/javascript" src="/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="/jquery-confirm/dist/jquery-confirm.min.js"></script>
  <script>
    // A $( document ).ready() block.
    $(document).ready(function () {
      $.ajax({
        url: "/nave_bar",
        type: "POST",
        dataType: 'html',
        success: function (data) {
          $(".left-navebar").html(data);

          $('#loading').fadeOut('slow');
        }
      })
    });

    function printDiv(divName) {

      $(".cancelBtn").hide();
      $(".printBtn").hide();
      var printContents = document.getElementById(divName).innerHTML;
      var originalContents = document.body.innerHTML;

      document.body.innerHTML = printContents;

      window.print();

      document.body.innerHTML = originalContents;

      $(".cancelBtn").show();
      $(".printBtn").show();
    }
  </script>
</body>

</html>